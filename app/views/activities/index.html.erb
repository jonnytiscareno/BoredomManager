
<h1> an activity </h1>

<table>
<tr>
	<th> Activity </th>
	<th> Length (Minutes) </th>
	<th> Description </th>

</tr>

<tbody>
	
	<tr>

	<td> <%= @activity.name %> </td>
	<td> <%= @activity.length %> </td>
	<td> <%= @activity.description %> </td>
	
	</tr>

</tbody>

</table>

<h3> Reviews </h3>

<% if @activity.reviews.blank? %> 
<p> No reviews </p>
<% else %> 
<% @activity.reviews.each do |review| %>
<p> Comment: <%= review.comment %> </p>
<p> Rating: <%= review.rating %> </p>
<% end %> 
<% end %> 

<h3> <%= link_to 'write a review', new_activity_review_path(@activity) %>
	
</h3>



