

<h3>Welcome to Boredom Manager</h3>


<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:length, "How long do you have? ") %>
  <%= number_field_tag(:length) %> 
  <%= submit_tag("Go!") %>
<% end %>

<p><%= link_to "Log in", new_user_session_path, class: "btn btn-large btn-realto " %></p>

<p><%= link_to "Sign up", new_user_registration_path, class: "btn btn-large btn-realto " %></p>

<p><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-large btn-realto " %></p>

<p><%= link_to "Add an Activity", new_activity_path, class: "btn btn-large btn-realto " %></p>

<p><%= link_to "See activities", activities_show_path, class: "btn btn-large btn-realto " %></p>
