<%= form_for @activity, class: "form-horizontal" do |f| %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :length, class: "col-sm-2 control-label" %>
    <%= f.select :length, [[5, 5],[10,10],[15,15],[20, 20],[25,25],[30,30],[35, 35],[40,40],[45,45], [50, 50], [55, 55], [60,60]], class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <%= f.text_area :description%><br />
    <br>
  </div>

  <div class="form-group">
    <%= f.label :category, class: "col-sm-2 control-label" %>
    <%= f.select :category, [["Sports", "Sports"],["Leisure", "Leisure"],["Eating","Eating"]], class: "form-control" %>
  </div>


  <%= f.submit 'Save', class: 'btn btn-primary btn-block' %>

<% end %>